<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dullWhite"
    tools:context=".DahBoard.AdminPanel.adminPanel"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:title="Tourism"
            app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/AddOrginizer"
            android:layout_width="152dp"
            android:layout_height="179dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/pink"
            android:backgroundTint="@color/pink"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ViewOrginizer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.13999999">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:src="@drawable/addadmin">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="122dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="\nAdd Organizer"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textStyle="bold">

            </TextView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/ViewOrginizer"
            android:layout_width="152dp"
            android:layout_height="179dp"
            android:layout_marginEnd="12dp"
            android:background="@color/white"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/AddOrginizer"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.17000002">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:src="@drawable/searchadin">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="122dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:text="\nView Organizer"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textStyle="bold">

            </TextView>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Welcome Admin"
            android:textColor="@color/pink"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <androidx.cardview.widget.CardView
            android:id="@+id/AddNews"
            android:layout_width="152dp"
            android:layout_height="179dp"
            android:layout_marginStart="12dp"
            android:background="@color/white"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ViewOrginizer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AddOrginizer">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="@color/white"
                android:src="@drawable/news">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="126dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="\n\t\tAdd News\t"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/ViewNews"
            android:layout_width="152dp"
            android:layout_height="179dp"
            android:background="@color/white"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/AddNews"
            app:layout_constraintTop_toBottomOf="@+id/ViewOrginizer">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:background="@color/white"
                android:src="@drawable/eys">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="126dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="\n\t\View News\t"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:itemIconTint="@color/pink"
        app:headerLayout="@layout/organizerheaderdrawer"
        app:itemTextColor="@color/pink"
        app:menu="@menu/adminfooter"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>